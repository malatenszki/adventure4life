{% set adventure4life_block = 'view-' ~ view.storage.id()|clean_class ~ '-' ~ view.current_display|clean_class %}
{% set adventure4life_element = adventure4life_block ~ '__item' %}
{% for field in fields -%}
    {{ field.separator }}
    {%- if field.wrapper_element -%}
        <{{ field.wrapper_element }}{{ field.wrapper_attributes.addClass(adventure4life_element ~ '-' ~ field.class) }}>
    {%- endif %}
    {%- if field.label -%}
        {%- if field.label_element -%}
            <{{ field.label_element }}{{ field.label_attributes.addClass(adventure4life_element ~ '-' ~ field.class ~ '-label') }}>{{ field.label }}{{ field.label_suffix }}</{{ field.label_element }}>
        {%- else -%}
            {{ field.label }}{{ field.label_suffix }}
        {%- endif %}
    {%- endif %}
    {%- if field.element_type -%}
        <{{ field.element_type }}{{ field.element_attributes.addClass(adventure4life_element ~ '-' ~ field.class ~ '-content') }}>{{ field.content }}</{{ field.element_type }}>
    {%- else -%}
        {{ field.content }}
    {%- endif %}
    {%- if field.wrapper_element -%}
        </{{ field.wrapper_element }}>
    {%- endif %}
{%- endfor %}
