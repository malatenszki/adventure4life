{%
  set adventure4life_block = adventure4life_block ?: ('user-' ~ user.bundle ~ (view_mode != 'default' ? '-' ~ view_mode))|clean_class
%}
{%
  set classes = [
    adventure4life_block,
    user.isBlocked() ? adventure4life_block ~ '--blocked',
  ]
%}
<article{{ attributes.addClass(classes) }}>
  {% block content %}
    {% if content %}
      {{- content -}}
    {% endif %}
  {% endblock %}
</article>
